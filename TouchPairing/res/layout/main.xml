<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation   = "vertical"
    android:layout_width  = "fill_parent"
    android:layout_height = "fill_parent"
    android:paddingTop    = "10dip"
    android:paddingBottom = "10dip"
    android:paddingLeft   = "10dip"
    android:paddingRight  = "10dip"
    >
  <TextView
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" 
      android:layout_marginTop    = "5dip"
      android:layout_marginBottom = "5dip"
      android:layout_marginLeft   = "5dip"
      android:layout_marginRight  = "5dip"
      android:text="@string/app_name"
      android:gravity="center"
      android:paddingTop    = "5dip"
      android:paddingBottom = "5dip"
      android:paddingLeft   = "5dip"
      android:paddingRight  = "5dip"
      />
  <Button
      android:id="@+id/install_kushikatsu_button"
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" 
      android:layout_marginTop    = "5dip"
      android:layout_marginBottom = "5dip"
      android:layout_marginLeft   = "5dip"
      android:layout_marginRight  = "5dip"
      android:text="@string/install_kushikatsu"
      />
  <Button
      android:id="@+id/install_touch_paring_to_remote_button"
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" 
      android:layout_marginTop    = "5dip"
      android:layout_marginBottom = "5dip"
      android:layout_marginLeft   = "5dip"
      android:layout_marginRight  = "5dip"
      android:text="@string/install_touch_paring_to_remote"
      />
  <Button
      android:id="@+id/request_pairing_button"
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" 
      android:layout_marginTop    = "5dip"
      android:layout_marginBottom = "5dip"
      android:layout_marginLeft   = "5dip"
      android:layout_marginRight  = "5dip"
      android:text="@string/request_pairing"
      />
</LinearLayout>
